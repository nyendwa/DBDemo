<Window x:Class="DataGridSQLExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataGridSQLExample"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <StackPanel Grid.Row="0" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Right" Background="Beige">
            <DataGrid x:Name="dataGrid" AutoGenerateColumns="True"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBox Text="Search" Opacity="10" Width="150" Height="30" Margin="5" HorizontalAlignment="Left"/>
            <Button Margin="5,10,0,0" Width="70" Height="30" HorizontalAlignment="Left" Content="Delete" FontWeight="DemiBold" FontFamily="Times New Roman"/>
        </StackPanel>
    </Grid>
</Window>
